datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt   DateTime    @default(now())
  description String?
  endDate     DateTime?
  id          String      @id @default(cuid())
  milestones  Milestone[]
  name        String?
  startDate   DateTime?
  tasks       Task[]
  updatedAt   DateTime    @updatedAt
}

model Team {
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  name        String?
  teamMembers TeamMember[]
  updatedAt   DateTime     @updatedAt
}

model Task {
  createdAt   DateTime        @default(now())
  description String?
  dueDate     DateTime?
  id          String          @id @default(cuid())
  project     Project?        @relation(fields: [projectId], references: [id])
  projectId   String?
  status      EnumTaskStatus?
  title       String?
  updatedAt   DateTime        @updatedAt
}

model TeamMember {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  role      String?
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  updatedAt DateTime @updatedAt
}

model Milestone {
  completionDate DateTime?
  createdAt      DateTime  @default(now())
  description    String?
  id             String    @id @default(cuid())
  project        Project?  @relation(fields: [projectId], references: [id])
  projectId      String?
  title          String?
  updatedAt      DateTime  @updatedAt
}

enum EnumTaskStatus {
  Option1
}
